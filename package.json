{
  "name": "portfolio-manager",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.2.3",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
